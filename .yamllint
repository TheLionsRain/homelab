extends: default

rules:
  line-length:
    max: 120
    level: warning

  comments-indentation: false

  comments: 
    min-spaces-from-content: 1

  braces:
    max-spaces-inside: 1

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  document-start:
    present: true

  trailing-spaces:
    level: error

  indentation:
    spaces: 2
    indent-sequences: consistent

  new-line-at-end-of-file: disable
  truthy:
    level: error
